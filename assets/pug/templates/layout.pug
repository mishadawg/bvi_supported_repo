block variables
doctype
html(lang="ru")
  head
    meta( charset="UTF-8" )
    meta( name="viewport" content="width=device-width, initial-scale=1, user-scalable=0")
    title Visual impairment plugin
    include meta
    include ../components/additional/add-import
    if (cssName !== undefined)
      link(rel=`stylesheet` href=`./../build/css/${cssName}.css`)

  body.body
    .page__header
      include ../components/sections/header
    .page__content
      if breadcrumbs
        .container
          +breadcrumb(breadcrumbs)
          if title
            p.title-first=title 
      block content
    .page__footer
      include ../components/sections/footer 

